{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "This is a base repository to use as template using express js and typescript",
  "main": "main.ts",
  "scripts": {
    "dev": "tsx watch --env-file=.env .",
    "dev:debug": "tsx watch --trace-sync-io --env-file=.env .",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "prisma:init": "npx prisma migrate dev --name init",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate": "npx prisma migrate dev",
    "format": "ts-standard --fix",
    "start": "node build/main.js",
    "test": "jest --detectOpenHandles --colors --expand --runInBand --verbose",
    "test:silent": "jest --silent",
    "test:watch": "jest --detectOpenHandles --watch",
    "test:coverage": "jest --coverage",
    "test:int": "./scripts/run-integration.sh",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "rest",
    "template"
  ],
  "author": "Renzo Yaques",
  "license": "MIT",
  "packageManager": "pnpm@10.12.2",
  "dependencies": {
    "@prisma/client": "6.17.1",
    "bcrypt": "6.0.0",
    "compression": "1.8.1",
    "cors": "2.8.5",
    "express": "5.1.0",
    "jsonwebtoken": "9.0.2",
    "pino-http": "10.5.0",
    "pino-pretty": "13.1.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "uuid": "11.1.0",
    "zod": "4.0.14"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "@types/bcrypt": "6.0.0",
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/supertest": "6.0.3",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "babel-jest": "30.1.2",
    "babel-plugin-tsconfig-paths-module-resolver": "1.0.4",
    "dotenv": "17.2.2",
    "install": "0.13.0",
    "jest": "30.1.3",
    "jest-mock-extended": "4.0.0",
    "prisma": "6.17.1",
    "supertest": "7.1.4",
    "ts-jest": "29.4.4",
    "ts-standard": "12.0.2",
    "tsc-alias": "1.8.16",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "build",
      "src/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/ts-standard/eslintrc.json"
  }
}
